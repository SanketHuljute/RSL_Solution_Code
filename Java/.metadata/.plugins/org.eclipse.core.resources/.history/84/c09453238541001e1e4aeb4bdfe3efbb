//Write the program to reverse the given sentence.
package section_4_String;
import java.util.*;
public class Assg_7 {

	public static void main(String[] args) {
		
		System.out.println("The given sentence is: ");
		Scanner sc = new Scanner(System.in);
		String str = sc.next();
		
		String arr[] = null;
		arr = str.split(" ");
		
		for(int i=0; i<str.length(); i++)
		{
			String s1 = new String (arr[i]);
			
			for(int j=s1.length()-1; i>=0; i--)
			{
				System.out.println(s1.charAt(j));
			}
			System.out.print(" ");
		}
		
		
//		System.out.println("First String Is: "+	str.toUpperCase());	
//		System.out.println(	"Second String Is: "+str.toLowerCase());
	}

}


